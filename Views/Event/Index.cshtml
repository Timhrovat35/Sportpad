@using Microsoft.AspNetCore.Identity
@model IEnumerable<Sportpad.Models.Event>
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Index";
}

@if (SignInManager.IsSignedIn(User))
    {
        <a asp-page="Create">
            <button style="border:none; justify-content:center;background-color: #66dcde; height:50px; width:100px; border-radius: 40px; color: black; font-weight: bold; box-shadow: 0 3px 2px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
            Create New
            </button>
        </a>
    }
    else
    {
        <a asp-area="Identity" asp-page="/Account/Login">
            <button style="border:none; justify-content:center;background-color: #66dcde; height:50px; width:100px; border-radius: 40px; color: black; font-weight: bold; box-shadow: 0 3px 2px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
                Create New
            </button>
        </a>
    }
<div style="position:sticky; bottom: 0">
</div>
<div style="flex-direction:row; display:flex; flex-wrap: wrap;">
    @foreach (var item in Model) {
            <div class="eventAd" style="margin:20px;background-color: white ;width:25%; box-shadow: 0 2px 2px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19); border-radius: 20px; padding:10px;">
                <div style="flex-direction: row ;display: flex;justify-content:space-around; align-items:center;">
                    <p style="font-size:12px; margin-top: 10px;">@Html.DisplayFor(modelItem => item.Username)</p>
                    <h5 style="font-weight:bold;">@Html.DisplayFor(modelItem => item.Name)</h5>
                    <a asp-action="Edit" asp-route-id="@item.Id"><button style="border:none;background-color:white"><i class="fa fa-ellipsis-h" aria-hidden="true"></i></button></a>
                </div>
                <div style="overflow: hidden; margin-top:5px;">
                    <div style="margin-left:15px ;margin-right:1px ;height: 200px;overflow: auto;">
                        <p style="font-weight: bold ; color: #515151;">
                            @Html.DisplayFor(modelItem => item.Description)
                        </p>
                    </div>
                </div>
                <div style="flex-direction: row ;display: flex; align-items: center; margin-top:10px;">
                    <div style="flex-direction: row;display:flex; margin-left:10px; background-color: #D9D9D9; width:40px; align-content:center; border-radius: 10px; height:30px; justify-content:center">
                        <p style="color: Black; font-weight: bold ;">1</p>
                        <p style="color: Black; font-weight: bold ;">/</p>
                        <p style="color: Black; font-weight: bold ;">@Html.DisplayFor(modelItem => item.MaximumNumber)</p>
                    </div>
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <a>
                            <button id="btn" class="gobutton" style="border:none; justify-content:center; margin-left: 120px; background-color: #6ade66; height:40px; width:70px; border-radius: 20px; color: black; font-weight: bold;box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.2), 0 3px 20px 0 rgba(0, 0, 0, 0.19);">
                                GREM
                            </button>
                        </a>
                    }
                    else
                    {
                        <a asp-area="Identity" asp-page="/Account/Login">
                            <button class="gobutton" style="border:none; justify-content:center; margin-left: 120px; background-color: #6ade66; height:40px; width:70px; border-radius: 20px; color: black; font-weight: bold;box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.2), 0 3px 20px 0 rgba(0, 0, 0, 0.19);">
                                GREM
                            </button>
                        </a>
                    }
                </div>
            </div>
    }
</div>
<style>
    ::-webkit-scrollbar {
    display: none;
    }
</style>
